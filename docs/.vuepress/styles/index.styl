.slick-dots
  display block
  position absolute
  bottom 0
  width 100%
  list-style none
  margin 0
  padding 0
  text-align center

  li
    display inline-block
    margin 0
    padding 0
    cursor pointer

    button
      display block
      width 12px
      height 12px
      margin 16px 8px
      font-size 0
      line-height 0
      cursor pointer
      color transparent
      border 0
      outline none
      background #888
      border-radius 50%

  li.slick-active button
    background #eee
