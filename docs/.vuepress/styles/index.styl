@import '~vue-slick-carousel/dist/vue-slick-carousel.css'
// @import '~vue-slick-carousel/dist/vue-slick-carousel-theme.css'

.icon.outbound
  display none !important

.theme-container .page .theme-default-content
  max-width 900px

.home-video
  position relative
  width 100%
  height 0
  padding-bottom 56.25%

  iframe, video
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    object-fit cover

.btn
  display inline-block
  padding 0.5em 1em
  background #29a1ff
  color #fff
  border-radius 4px
  font-weight bold
  transition background 300ms ease
  text-decoration none !important

  &:hover
    background #0690ff

  &:disabled
    opacity 0.5
    cursor not-allowed

.text-center
  text-align center

.slick-slide a
  cursor pointer
  color unset
  font-weight unset
  text-decoration unset !important

.slick-slider .slick-prev,
.slick-slider .slick-next
  &:before,
  &:after
    content ''
    position absolute
    top 0
    left 0
    display block
    width 100%
    height 100%

  &:hover:after
    background-size 50%

  position absolute
  top 50%
  width 80px
  height 100%
  transform translateY(-50%)
  color white
  cursor pointer
  font-size 0
  line-height 0
  border unset
  background unset
  z-index 1

